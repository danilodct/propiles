<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.profisio.basics.TipoContaPagar" table="tipocontapagar_novo">
		<id name="id" >
			<generator class="increment" />
		</id>
		
		<property name="nome" />
	</class>
	
	<query name="getAllTiposContaPagar">
			<![CDATA[
			from TipoContaPagar
			order by nome
			]]>
	</query>
	
	<query name="getAllTiposContaPagarByTipoCusto">
			<![CDATA[
			select tipo
			from ContaPagar conta
			left join conta.tipo as tipo
			where conta.tipoCusto = :tipoCusto
			order by tipo.nome
			]]>
	</query>
	
</hibernate-mapping>