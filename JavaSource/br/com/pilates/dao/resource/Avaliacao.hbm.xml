	<query name="getLastAvaliacaoByModalidadeCliente">
			<![CDATA[
			select cadastro.avaliacao
			from Cadastro as cadastro
			where cadastro.modalidade.servico = :servico
			and cadastro.cliente = :cliente
			]]>
	</query>
	
	<query name="getAllConhecimentoStudio">
			<![CDATA[
			select conhecimentoStudio
			from Avaliacao
			where conhecimentoStudio is not null
			group by conhecimentoStudio
			]]>
	</query>
	
	<query name="getQtAvaliacaoByMidia">
			<![CDATA[
			select count(id)
			from Avaliacao
			where conhecimentoStudio = :midia
			]]>
	</query>
	
</hibernate-mapping>

