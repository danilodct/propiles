<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.pilates.base.TipoContaReceber" table="tipocontareceber">
		<id name="nome" ></id>
	</class>
	
	<query name="getAllTiposContaReceber">
			<![CDATA[
			from TipoContaReceber
			order by nome  
			]]>
	</query>
	
	<query name="getQtContaReceberByFormaPagamento">
			<![CDATA[
			select count(distinct cadastro.cliente)
			from ContaReceber
			where formaPagamento = :forma
			]]>
	</query>
	
</hibernate-mapping>